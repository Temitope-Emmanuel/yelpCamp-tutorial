<%include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= campground.name %></h1>
        <div style="width:30%; margin:25px auto">
            <form method="POST" action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>?_method=PUT">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block" style="background:green">Submit!!!</button>
                </div>
            </form>
            <A HREf="/campgrounds/<%=campground._id%>">Go back</A>
        </div>

    </div>
</div>



<%include ../partials/footer%>