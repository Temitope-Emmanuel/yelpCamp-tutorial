<%include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome</h1>
            <p>View our selected Campground</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <%campgrounds.forEach(function(camping){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=camping.image%>">
            </div>
            <div class="caption">
                <h4>
                    <%=camping.name%>
                </h4>
            </div>
            <p>
                <a href="/campgrounds/<%=camping._id%>" class="btn btn-primary">Show info</a>
            </p>
        </div>
        <%})%>
    </div>
</div>

<%include ../partials/footer%>